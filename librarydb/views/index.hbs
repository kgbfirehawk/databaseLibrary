{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the staffID, staffName, staffTitle, staffExtension and LibraryID, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.staffID}}</td>
            <td>{{this.staffName}}</td>
            <td>{{this.staffTitle}}</td>
            <td>{{this.staffExtension}}</td>
            <td>{{this.librariesLibraryID}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
