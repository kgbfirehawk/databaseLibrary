  <a href="checkouts.html"><button type="button">Checkouts</button></a>
</div>

<!-- Display all books -->
<table border="1">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Library ID</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.bookID}}</td>
            <td>{{this.bookTitle}}</td>
            <td>{{this.bookAuthor}}</td>
            <td>{{this.bookGenre}}</td>
            <td>{{this.librariesLibraryID}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- Add a new book -->
<h3>Add New Book</h3>
<form action="/books/add" method="POST">
    <label>Title: </label><input type="text" name="bookTitle"><br>
    <label>Author: </label><input type="text" name="bookAuthor"><br>
    <label>Genre: </label><input type="text" name="bookGenre"><br>
    <label>Library ID: </label>
    <select name="librariesLibraryID">
        {{#each libraries}}
            <option value="{{this.libraryID}}">{{this.libraryName}}</option>
        {{/each}}
    </select><br>
    <button type="submit">Add Book</button>
</form>
